// Creates a blog post element on the blog post edit page. Passes a list of posts from the db
mixin edit_blog_posts(post)
  script.


  style.
    :root {
      --icon-width: 40px;
    }

    .post-individual {
      margin-top: 40px;
      --icon-width: 40px;
      font-size: 40px;
      display: table-cell;
      width: 400px;
      height: 500px;
      border: 4px dashed black;
      border-radius: 20px;
      vertical-align: middle;
      text-align: center; 
      transition:font-size .5s;
     -moz-transition:font-size .5s; /* Firefox 4 */
     -webkit-transition:font-size .5s; /* Safari and Chrome */
    }

    #blog-edit {
      background-color: #7cc8ff;
      border: 4px solid black;
    }

    .post-individual:hover {
      cursor: pointer;
      background-color: #005999 !important;
      border: 4px dashed #212529;
    }

    .post-individual:hover:not(#blog-edit) {
      font-size: 60px;
    }

    i.fa.fa-plus {
      z-index: 20;
      display: inline-block;
    }

    .post-icon {
      position: relative;
      z-index: 20;
      background-color: #005999;
      margin-left: auto;
      margin-right: auto;
      width: calc(20px + var(--icon-width));
      border-radius: 20px;
    }

    .post-content {
      z-index: 10;
      position: absolute;
      top: 10px;
      left: 0;
    }

    .post-content img, h3, p {
      width: 90%;
      margin-left: auto;
      margin-right: auto;
    }

    img {
      max-height: 200px;
      max-width: 200px;
    }

  // If Blog Post Send a Blog Post
  if post
    .col-lg-4.col-md-4.col-sm-6(style="margin-top: 50px;")
        .post-individual#blog-edit(onclick='edit_post(\'#{post._id}\')')
          .post-icon
            i.fa.fa-edit
          .post-content
            img(src='img/blog_posts/#{post._id}.jpg')
            h3 #{post.title}
            p.fix-font-20 #{post.article_description}
            p(style='font-size: 10px; color: black;') #{new Date(post.date)}
  else
    .col-lg-10
        h1 Blog Posts
      .col-lg-4.col-md-4.col-sm-6(style="margin-top: 50px;")
        .post-individual(onclick='create_post()')
          i.fa.fa-plus
    

